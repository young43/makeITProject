<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterProjectActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:id="@+id/edit_resume_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:id="@+id/edit_resume_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="연락처"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:id="@+id/edit_resume_phone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18dp"
                        android:inputType="number"/>
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="자기소개"
                    android:textSize="18dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edit_resume_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:textSize="16dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_border"
                    android:gravity="top"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="경력1"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="회사이름:"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_company_name1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="입사 날짜:"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_in_year1"
                            android:maxLength="4"
                            android:hint="2020"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="년"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_in_month1"
                            android:maxLength="2"
                            android:hint="03"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="월"
                            android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="퇴사 날짜:"
                            android:textSize="18dp"/>
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_out_year1"
                            android:maxLength="4"
                            android:hint="2020"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="년"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_out_month1"
                            android:maxLength="2"
                            android:hint="03"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="월"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="경력2"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="회사이름:"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_company_name2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="입사 날짜:"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_in_year2"
                            android:maxLength="4"
                            android:hint="2020"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="년"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_in_month2"
                            android:maxLength="2"
                            android:hint="03"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="월"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="퇴사 날짜:"
                            android:textSize="18dp"/>
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_out_year2"
                            android:maxLength="4"
                            android:hint="2020"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="년"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_out_month2"
                            android:maxLength="2"
                            android:hint="03"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="월"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="경력3"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="회사이름:"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_company_name3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="입사 날짜:"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_in_year3"
                            android:maxLength="4"
                            android:hint="2020"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="년"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_in_month3"
                            android:maxLength="2"
                            android:hint="03"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="월"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="퇴사 날짜:"
                            android:textSize="18dp"/>
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_out_year3"
                            android:maxLength="4"
                            android:hint="2020"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="년"
                            android:textSize="18dp" />
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/resume_out_month3"
                            android:maxLength="2"
                            android:hint="03"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="월"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_resume"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="이력서 등록"
        android:textSize="16dp"
        android:background="#000000"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>