<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterProjectActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="18dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edit_project_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="지역"
                    android:textSize="18dp"
                    android:textColor="#000000"/>
                <Spinner
                    android:id="@+id/spinner_project_region"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="인원"
                    android:textSize="18dp"
                    android:textColor="#000000"/>
                <Spinner
                    android:id="@+id/spinner_project_member"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="명"
                    android:textSize="18dp"/>
            </LinearLayout>


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/edit_project_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:textSize="16dp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_border"
                android:gravity="top"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="담당 연락처"
                    android:textSize="18dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edit_project_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="담당 이메일"
                    android:textSize="18dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edit_project_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="textEmailAddress"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>





    <Button
        android:id="@+id/btn_register_project"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:text="프로젝트 등록"
        android:textSize="16dp"
        android:background="#000000"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>